<view class="ls_selector-item">
  <view class="ls_selector-item-inner {{ source[activeDisabled] ? 'ls_selector-item-disabled': '' }}" onTap="onCheckedByBodyHandler">
    <text number-of-lines="1">{{ source[activeLabel] }}</text>
    <ls-check groupId="__selector_group__" value="{{ source }}" identify="{{ activeKey }}" size="small" disabled="{{ source[activeDisabled] }}" ref="checkInstance" />
  </view>

  <view class="ls_selector-item-children" a:if="{{ source[activeChildren].length }}">
    <ls-selector-item a:for="{{ source[activeChildren] }}" source="{{ item }}" activeLabel="{{ activeLabel }}" activeKey="{{ activeKey }}" activeChildren="{{ activeChildren }}" activeDisabled="{{ activeDisabled }}"></ls-selector-item>
  </view>
</view>