.ls_selector {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 95vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.ls_selector-title {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 92rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
  flex-shrink: 0;
  font-size: 32rpx;
  font-weight: bold;
}
.ls_selector-closeIcon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
}
.ls_selector-closeIcon:before,
.ls_selector-closeIcon:after {
  display: block;
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 26rpx;
  height: 2rpx;
  background-color: #666;
}
.ls_selector-closeIcon:before {
  transform: translate(-50%, -50%) rotate(45deg);
}
.ls_selector-closeIcon:after {
  transform: translate(-50%, -50%) rotate(-45deg);
}
.ls_selector-content {
  min-height: 240rpx;
  padding-left: 24rpx;
  flex: 1;
  overflow-y: auto;
}
.ls_selector-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  height: 112rpx;
  flex-shrink: 0;
  background-color: rgba(255, 255, 255, 0.95);
}
